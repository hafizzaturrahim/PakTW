<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:id="@+id/cv_disease"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/disease_photo"
                android:src="@drawable/ic_fog"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/name_disease"
                android:text="tes aja"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentBottom="false"
                android:layout_toRightOf="@+id/disease_photo"
                android:layout_toEndOf="@+id/disease_photo"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/desc_disease"
                android:text="tes aja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_below="@+id/name_disease"
                android:layout_toRightOf="@+id/disease_photo"
                android:layout_toEndOf="@+id/disease_photo"
                android:layout_marginTop="2dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>